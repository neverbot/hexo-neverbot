// instagram embeds
/* (e.g.) Change the width according to screen size */
@media screen and (min-width: 800px)
  .instagram-wrapper
    margin: 1em auto
    width: 80%
    /* max-width: 658px */ /* To resize with max-width , please use this code. */

@media screen and (min-width: 481px)
  .instagram-wrapper
    margin: 1em auto
    width: 90%

@media screen and (min-width: 0px) and (max-width: 480px)
  .instagram-wrapper
    margin: 1em auto
    width: 100%
