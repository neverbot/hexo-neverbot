/* mobile phone and smart portable devices */
@media screen and (max-width: 479px) 
  .wrapper 
    background: no-repeat top/120% url("/images/background-header.gif")
    padding-right: 1rem;
    padding-left: 1rem;

    .header
      min-height: unset
    .main
      width: 100%

      .home
        margin: 0 auto 2em auto    
        width: 100%  
        #main 
          height: unset
          .text
            padding: 0 !important
            h1
              margin: 0 !important
  .post
    margin-bottom: 2em;
    .post-title::before
      content: unset

