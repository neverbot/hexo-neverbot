.post
  font-family: $basic-font-family
  margin-bottom: 4em;  

  .post-title
    font-size: 1.2em;
    line-height: 1.5em;
    text-decoration: underline;
    font-weight: bold;
    position: relative;
  .post-title:hover
    text-decoration: none;
  .post-title::before
    content: "#";
    color: $post-link-hover-color;
    font-size: 5em;
    display: block;
    position: absolute;
    left: -70px;
    opacity: 0.3;

  .post-footer    
    // margin-top: 30px

  .post-meta, .post-footer
    font-size 1em
    color $font-secondary-color

    a
      color $font-secondary-color
      text-decoration: underline;

      &:hover
        color $global-link-hover-color
        text-decoration: none;
        
.post-content
  // padding-top 2rem
  font-size 1.1em
  line-height: 1.5em;
  // text-align justify
  margin-bottom: 1em;

  overflow-wrap: break-word;
  word-wrap: break-word;

  -ms-word-break: break-all;
  word-break: break-word;

  -ms-hyphens: auto;
  -moz-hyphens: auto;
  -webkit-hyphens: auto;
  hyphens: auto;

  h2,
  h3,
  h4,
  h5,
  h6
    font-size 1.1em
    margin-top 1.2em
    margin-bottom 1em
    // padding-top .8em
    // padding-bottom .3em
  h1::before
    content "#"
    margin-right 5px
    color $post-link-color
  h2::before
    content "#"
    margin-right 5px
    color $post-link-color
  h3::before
    content "|"
    margin-right 5px
    color $post-link-color
  h4::before
    content "*"
    margin-right 5px
    color $post-link-color

  a:hover
    color $post-link-hover-color

  a
    // brush used from svgbox project, copied to local so we do not depend
    // of third-party cdns
    // background: url(//s2.svgbox.net/pen-brushes.svg?ic=brush-9&color=$post-link-hover-color-with-marker);
    background url("/images/pen-brushes.svg")
    color $post-link-color-with-marker

  ul
    padding-left 2em

  table
    max-width 100%
    margin 10px auto
    border-spacing 0
    thead
      background $post-table-background-color
    th, td
      padding 5px 15px
      border .5px solid $border-color

  .image-caption:not(:empty)
    min-width 20%
    max-width 80%
    display inline-block
    padding 10px
    margin 0 auto
    border-bottom 1px solid #d9d9d9
    font-size 14px
    color #969696
    line-height 1.7

  img
    display block
    max-width 100%
    height auto
    margin: 20px auto;
    border-radius: 9px;
    overflow hidden
    // for zoom
    transition: transform .5s ease;

  // zoom
  img:hover 
    transform: scale(1.05);

  blockquote
    // background: url('/images/quotes.gif') no-repeat top left;
    // border: none;
    padding 1em 1.2em 1em 1.2em
    // font-style: italic;
    position: relative;
    font-family: monospace;
    // font-size: small;
    line-height: 140%;
    font-weight: normal;
    text-align: left;    
    
  blockquote:after
    content: '\201D';
    font-size: 9em;
    font-family: $basic-font-family
    color: $global-link-hover-color;
    font-weight: bold;
    opacity: 0.3;
    z-index: -1;
    position: absolute;
    left: -30px;
    top: 65px;
    transform: rotate(-17deg);

    // font-size 1rem
    // display block
    // margin 1em 0
    // padding 1em 1.2em 1em 1.2em
    // position relative
    // color rgba(#34495e, 0.8)
    // background-color $post-blockquote-background-color
    // border-left 2px solid $post-blockquote-border-color
    // box-shadow 1px 1px 2px rgba(0,0,0,0.125)
    p
      margin 0
    footer
      strong
        margin-right 0.5em
    &.pullquote
      background-color transparent
      max-width 45%
      border 0
      &.left
        float left
        text-align left
      &.right
        float right
        text-align right 

  .svg-inline--fa
     font-size 1.7em
     vertical-align bottom

  hr
    margin-top 2em
    margin-bottom 2em

  iframe
    display block
    max-width 100%
    margin 0 auto
    overflow hidden
    
  code, pre
    line-height 1.7em
    padding 7px
    font-size 14px
    font-family Consolas, Monaco, Menlo, Consolas, monospace
  code
    line-height 1.7em
    padding 3px 5px
    border-radius 4px
    color $code-font-color
    background $code-background-color

  iframe
    margin 0 auto !important

  figure.highlight
    margin 1em 0
    overflow-x auto
    position relative
    &::-webkit-scrollbar
      width 6px
      height 6px
    &::-webkit-scrollbar-thumb
      width 6px
      background-color #eee
      border-radius 2px
    figcaption
      padding 0 0.5em
      text-align right
      font-size 13px
      span
        margin 0 0.5em
    table
      position relative
    table, tr, td
      margin 0
      padding 0
      border 0
      width 100%
      border-collapse collapse
    .code
      pre
        margin 0 10px

    // line number
    .gutter
      width 10px
      color #d0d0d0
      pre
        margin 0

  .left
    float left
    margin-right 25px

  .right
    float right
    margin-left 25px

  .textright
    text-align right
  
  .center
    text-align center

.post-nav 
  font-family: $basic-font-family
  font-size: 1em;
  color $font-secondary-color

  a
    color $font-secondary-color
    &:hover
      color $global-link-hover-color

  &:before,
  &:after 
    content: " "
    display: table
  
  & a.prev,
  & a.next 
    transition-property: transform
    transition-timing-function: ease-out
    transition-duration: 0.3s
  
  & a.prev 
    float: left
  
  & a.prev::before 
    content "<"
    margin-right .5em

  & a.prev:hover 
    transform: translateX(-4px)
  
  & a.next 
    float: right
  
  & a.next::after 
    content ">"
    margin-left .5em
  
  & a.next:hover 
    transform: translateX(4px)

